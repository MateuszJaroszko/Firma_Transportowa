<Window x:Class="Firma_Transportowa.View.Samochody"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Firma_Transportowa.View"
        mc:Ignorable="d"
        Title="Samochody" Height="450" Width="800">
    <Grid>
        <ListView Grid.Row="1" ItemsSource="{Binding Lstsamochody}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="id_samochodu" DisplayMemberBinding="{Binding id_samochodu}"/>
                        <GridViewColumn Header="id_samochodu" DisplayMemberBinding="{Binding nr_rejestracji}"/>
                        <GridViewColumn Header="ladownosc" DisplayMemberBinding="{Binding ladownosc}"/>
                        <GridViewColumn Header="wiek_pojazdu" DisplayMemberBinding="{Binding wiek_pojazdu}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Click="Window1_click" Content="Wróć do menu" Margin="663,377,10,10"></Button>
    </Grid>
</Window>
